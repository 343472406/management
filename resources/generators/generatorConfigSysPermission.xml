<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!-- DB2Tables是数据库转表，运行的是MyBatis3版本 -->
	<context id="DB2Tables" targetRuntime="MyBatis3">
		<!-- 注释构建 -->
		<commentGenerator>
			<!-- 去掉所有的注释 -->
			<property name="suppressAllComments" value="true" />
			<property name="suppressDate" value="true" />
		</commentGenerator>

		<!-- 数据库四要素 -->
		<jdbcConnection connectionURL="jdbc:mysql://localhost:3305/management"
						driverClass="com.mysql.jdbc.Driver" 
						userId="root" 
						password="1234" />
		<!-- 实体类 : pojo 
			targetPackage : 实体类生成后存放的包 
			targetProject : 存放的目录一般都放在 src下面
		 -->
		<javaModelGenerator targetPackage="org.system.security.permission.entity"
							targetProject="management-web/src_module" />
		<!-- 映射文件 -->
		<sqlMapGenerator targetPackage="org.system.security.permission.mapper"
						 targetProject="management-web/src_module" />
		<!-- 操作接口 
			type 生成映射的形式
				ANNOTATEDMAPPER : 纯注解的,没有xml映射 
				XMLMAPPER : 生成的有xml映射文件
		 -->
		<javaClientGenerator type="ANNOTATEDMAPPER"
							 targetPackage="org.system.security.permission.mapper"
							 targetProject="management-web/src_module" />

		<!-- 要生成对应表的配置 
			tableName: 				数据库表名 //如果下面全部是true,mybatis直接可以使用纯面向对象开发 
			domainObjectName:		生成的pojo名(不写默认表明首字母大写)
			enableCountByExample: 	是否生成查询总数的 Example 
			enableDeleteByExample: 	是否生成删除的 Example 
			enableSelectByExample: 	是否生成查询集合的 Example 
			enableUpdateByExample: 	是否生成修改的 Example -->
		<table tableName="SYS_PERMISSION" domainObjectName="SysPermission" enableCountByExample="false" enableDeleteByExample="true" enableSelectByExample="true" enableUpdateByExample="false"></table>
	</context>
</generatorConfiguration>
